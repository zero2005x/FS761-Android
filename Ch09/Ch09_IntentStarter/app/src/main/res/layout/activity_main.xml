<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tw.com.flag.ch09_intentstarter.MainActivity">

    <Button
        android:text="啟動電子郵件"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonEmail"
        android:onClick="onClick"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:text="啟動簡訊"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSms"
        android:onClick="onClick"
        app:layout_constraintLeft_toLeftOf="@+id/buttonEmail"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonEmail" />

    <Button
        android:text="開啟網頁"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonWeb"
        android:onClick="onClick"
        app:layout_constraintLeft_toLeftOf="@+id/buttonSms"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonSms" />

    <Button
        android:text="開啟地圖"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonGps"
        android:onClick="onClick"
        app:layout_constraintLeft_toLeftOf="@+id/buttonWeb"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonWeb" />

    <Button
        android:text="搜尋Web資料"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonWebSearch"
        android:onClick="onClick"
        app:layout_constraintLeft_toLeftOf="@+id/buttonGps"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonGps" />
</android.support.constraint.ConstraintLayout>
